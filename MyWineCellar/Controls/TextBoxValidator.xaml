<UserControl
    x:Class="MyWineCellar.Controls.TextBoxValidator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<TextBox x:Name="TextBox" LostFocus="TextBox_OnLostFocus">
		<TextBox.Description>
			<TextBlock x:Uid="ErrorMessage_TheFieldCannotBeEmpty" x:Name="TextBlock" Foreground="Red" Visibility="Collapsed"/>
		</TextBox.Description>
	</TextBox>
</UserControl>