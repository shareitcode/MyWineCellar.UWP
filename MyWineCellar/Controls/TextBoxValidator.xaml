<UserControl
    x:Class="MyWineCellar.Controls.TextBoxValidator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:MyWineCellar.Converters">
	<UserControl.Resources>
		<converters:BooleanToVisibleConverter x:Key="VisibilityConverter" />
	</UserControl.Resources>

	<TextBox x:Name="TextBox" Text="{x:Bind Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="{x:Bind Header, Mode=OneWay}"
	         PlaceholderText="{x:Bind PlaceholderText, Mode=OneWay}" InputScope="{x:Bind InputScope, Mode=OneWay}" LostFocus="TextBox_OnLostFocus">
		<TextBox.Description>
			<TextBlock x:Uid="ErrorMessage_TheFieldCannotBeEmpty" x:Name="TextBlock" Foreground="Red"
			           Visibility="{x:Bind IsValidate, Mode=OneWay, Converter={StaticResource VisibilityConverter}}"/>
		</TextBox.Description>
	</TextBox>
</UserControl>